{% set _entity_config = easyadmin_entity(app.request.query.get('entity')) %}
{# the empty string concatenation is needed when the primary key is an object (e.g. an Uuid object) #}
{% set _entity_id = '' ~ attribute(entity, _entity_config.primary_key_field_name) %}
{% trans_default_domain _entity_config.translation_domain %}
{% set _trans_parameters = { '%entity_name%': _entity_config.name|trans, '%entity_label%': _entity_config.label|trans, '%entity_id%': _entity_id } %}

{% extends _entity_config.templates.layout %}

{% block body_id 'easyadmin-show-' ~ _entity_config.name ~ '-' ~ _entity_id %}
{% block body_class 'show show-' ~ _entity_config.name|lower %}

{% block content_title %}
    {% spaceless %}
        {% set _default_title = 'show.page_title'|trans(_trans_parameters, 'EasyAdminBundle') %}
        {{ _entity_config.show.title is defined ? _entity_config.show.title|trans(_trans_parameters) : _default_title }}
    {% endspaceless %}
{% endblock %}

{% block main %}


    <div class="row">
        <div class="col-xs-12">

            <div class="nav-tabs-custom">

                <!-- NAVIGATION -->

                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#_easyadmin_form_design_element_0" id="_easyadmin_form_design_element_0-tab" data-toggle="tab">
                            <i class="fa fa-address-card"></i>
                            Group Information
                        </a>
                    </li>

                    <li class="">
                        <a href="#_easyadmin_form_design_element_4" id="_easyadmin_form_design_element_4-tab" data-toggle="tab">
                            <i class="fa fa-file-video-o"></i>
                            Members (<b>{{ members|length }}</b>)
                        </a>
                    </li>
                </ul>

                <!-- TAB CONTENT -->

                <div class="tab-content">

                    <div id="_easyadmin_form_design_element_0" class="tab-pane active">
                        <div class="row">

                            {% block show_fields %}
                                {% for field, metadata in fields %}
                                    {% block show_field %}

                                        <div class="form-group field-{{ metadata.type|default('default')|lower }} {{ metadata.css_class|default('') }}">
                                            <label class="col-sm-2 control-label">
                                                {{ (metadata.label ?: field|humanize)|trans(_trans_parameters)|raw }}
                                            </label>
                                            <div class="col-sm-10">
                                                <div class="form-control">
                                                    {{ easyadmin_render_field_for_show_view(_entity_config.name, entity, metadata) }}
                                                </div>
                                            </div>
                                        </div>

                                    {% endblock %}
                                {% endfor %}
                            {% endblock %}

                        </div>

                        <div class="form-group form-actions">
                            <div class="col-sm-10 col-sm-offset-2">
                                {% block item_actions %}
                                    {% set _show_actions = easyadmin_get_actions_for_show_item(_entity_config.name) %}
                                    {% set _request_parameters = { entity: _entity_config.name, referer: app.request.query.get('referer') } %}

                                    {{ include('@EasyAdmin/default/includes/_actions.html.twig', {
                                        actions: _show_actions,
                                        request_parameters: _request_parameters,
                                        translation_domain: _entity_config.translation_domain,
                                        trans_parameters: _trans_parameters,
                                        item_id: _entity_id
                                    }, with_context = false) }}
                                {% endblock item_actions %}
                            </div>
                        </div>

                    </div>

                    <div id="_easyadmin_form_design_element_4" class="tab-pane ">

                        {{
                        include('easy_admin/Room/members.html.twig', {
                            members: members
                        })
                        }}

                        <div class="col-sm-10 col-sm-offset-0">
                            {% block item_actions_conference %}
                                {% set _show_actions = easyadmin_get_actions_for_show_item(_entity_config.name) %}
                                {% set _request_parameters = { entity: _entity_config.name, referer: app.request.query.get('referer') } %}

                                {{ include('@EasyAdmin/default/includes/_actions.html.twig', {
                                    actions: _show_actions,
                                    request_parameters: _request_parameters,
                                    translation_domain: _entity_config.translation_domain,
                                    trans_parameters: _trans_parameters,
                                    item_id: _entity_id
                                }, with_context = false) }}
                            {% endblock item_actions_conference %}
                        </div>

                    </div>


                </div>

            </div>

        </div>


    </div>


{% endblock %}

{% block body_javascript %}
    {{ parent() }}
{% endblock %}
